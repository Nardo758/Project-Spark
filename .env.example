# Database Configuration (PostgreSQL via PG* variables)
# For Replit: Uses PGHOST=db, PGDATABASE=replit, PGUSER=replit from .replit file
# For local development:
PGHOST=localhost
PGPORT=5432
PGDATABASE=friction_db
PGUSER=friction_user
PGPASSWORD=friction_password

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Add your frontend domains here
# For Replit (allows all origins):
BACKEND_CORS_ORIGINS=["*"]
# For local development:
# BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5000"]
# For production (specific domains):
# BACKEND_CORS_ORIGINS=["https://yourdomain.com"]

# URLs (automatically set on Replit)
FRONTEND_URL=http://localhost:5000
BACKEND_URL=http://localhost:8000

# Project Configuration
PROJECT_NAME=Friction API
API_V1_PREFIX=/api/v1

# Email Configuration (Resend) - Optional
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# OAuth Configuration (Google) - Optional
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Configuration (GitHub) - Optional
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Observability (Sentry) - Optional
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
