modules = ["python-3.11", "web", "nodejs-20", "postgresql-16"]
run = "python server.py"
hidden = [".pythonlibs", "venv", ".cache", "**/__pycache__", "**/.pytest_cache", ".replit"]
entrypoint = "server.py"

[agent]
expertMode = true
integrations = ["python_database:1.0.0", "resend:1.0.0", "stripe:2.0.0", "python_anthropic_ai_integrations:1.0.0", "python_log_in_with_replit:1.0.0", "python_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "freetype", "geos", "lcms2", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "zlib"]

[env]
PYTHON_LD_LIBRARY_PATH = "/nix/store/*-python3-*/lib"
PYTHONPATH = "${REPL_HOME}/backend:${PYTHONPATH}"

# Database Configuration (Replit PostgreSQL)
# Replit's PostgreSQL is available at these endpoints
PGHOST = "db"
PGPORT = "5432"
PGDATABASE = "replit"
PGUSER = "replit"
# Note: PGPASSWORD should be automatically set by Replit or use empty string for local

# Security
SECRET_KEY = "73bd4698e414f4367c261655e963bb0414e0fa8076b1222b47a4e4d6d75e7dcd"
ALGORITHM = "HS256"
ACCESS_TOKEN_EXPIRE_MINUTES = "30"

# API Configuration
PROJECT_NAME = "Friction API"
API_V1_PREFIX = "/api/v1"

# CORS - Allow all origins for Replit preview
BACKEND_CORS_ORIGINS = '["*"]'

# Frontend/Backend URLs (will be set by Replit)
FRONTEND_URL = "${REPL_SLUG}.${REPL_OWNER}.repl.co"
BACKEND_URL = "${REPL_SLUG}.${REPL_OWNER}.repl.co"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages.python3]
pattern = "**/*.py"
syntax = "python"

[languages.python3.languageServer]
start = "pylsp"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 5432
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
run = ["bash", "-c", "cd backend && PYTHONPATH=. python -m uvicorn app.main:app --host 0.0.0.0 --port 5000"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["bash", "-c", "cd frontend && npm run build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && PYTHONPATH=. python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

